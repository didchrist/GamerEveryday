{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/custoAvailability.css')}}">
	{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
<div clas="cover-availability"></div>
<div class="d-flex flex-column">
	<h2 class="text-neon-pink" >Disponibilit√© Global</h2>
	<div>
		<p id="statusAjaxGlobal"></p>
	</div>
	<div id="listAvailabilityGlobal">
		{% for availabilityGlobal in availabilitiesGlobal %}
			<div class="availability">
				<p>{{ availabilityGlobal.startDate | date("H:i d/m/Y", "Europe/Paris")}}
					=>
					{{ availabilityGlobal.endDate | date("H:i d/m/Y", "Europe/Paris") }}</p>
				<button class="ajaxDeleteAvailabilityGlobal"> 
					<i class="fa-regular fa-circle-xmark"></i>
				</button>
			</div>
		{% endfor %}
	</div>
	<div id="start_date_time"></div>
	<div id="end_date_time"></div>
	<button class="button-none" id="ajaxSendGlobal">
            <a class="my-5 btn" style="--clr:var(--primary-light)" name="valider"><span>Valider</span><i></i></a>
	</button>
	{{ form_start(availabilityForm) }}
	{{ form_row(availabilityForm.game)}}
	<div>
		<p id="statusAjax"></p>
	</div>
	<div id="listAvailability">
		{% for availability in availabilities %}
			<div class="availability">
				<p>{{ availability.startDate | date("H:i d/m/Y", "Europe/Paris")}}
					=>
					{{ availability.endDate | date("H:i d/m/Y", "Europe/Paris") }}</p>
				<button class="ajaxDeleteAvailability">
					<i class="fa-regular fa-circle-xmark"></i>
				</button>
			</div>
		{% endfor %}
	</div>
	<h2 id="confirmGame"></h2>
	<div>
		<img src="" alt="">
	</div>

	<div id="start_date_time_2"></div>
	<div id="end_date_time_2"></div>
	<button class="button-none" id="ajaxSend">
            <a class="my-5 btn" style="--clr:var(--primary-light)" name="valider"><span>Valider</span><i></i></a>
	</button>
	{{ form_end(availabilityForm) }}
</div>
	<script src="{{ asset('assets/js/ajaxAvailability.js')}}"></script>
	<script>
		var urlAddGlobalAvailability = "{{ path('app_add_globalAvailability') | escape('js') }}";
var urlListGameAvailability = "{{ path('app_availability_listgame') | escape ('js') }}";
var urlAddAvailability = "{{ path('app_add_availability') | escape('js') }}";
var urlDeleteAvailabilityGlobal = "{{ path('app_delete_globalAvailability') | escape('js') }}";
var urlDeleteAvailability = "{{ path('app_delete_availability') | escape('js') }}";
	</script>
{% endblock %}
